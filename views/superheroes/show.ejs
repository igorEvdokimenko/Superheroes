<% layout("layouts/boilerplate") %> 
    <div class="row">
        <div class="col-6 offset-3"> 
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% superhero.images.forEach((img,i)=>{ %> 
              <div class="carousel-item <%= i===0 ? "active" : "" %> ">
                <img src="<%= img.url %>" class="d-block w-100" alt="">
              </div>
              <% }) %> 
            </div>
            <% if(superhero.images.length>1) {%> 
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <% } %> 
          </div>
            <div class="card">
            <div class="card-body">
              <h5 class="card-title">Description</h5>
              <p class="card-text"><%= superhero.origin_description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Nickname: <b><%= superhero.nickname %></b></li>
              <li class="list-group-item">Real name: <b><%= superhero.real_name %></b></li>
              <li class="list-group-item">Superpowers: <b><%= superhero.superpowers %></b></li>
              <li class="list-group-item">Catch phrase: <b><%= superhero.catch_phrase %></b></li>
            </ul>
            <div class="card-body">
              <a href="/superheroes/<%= superhero._id %>/edit" class="card-link btn btn-info">Edit</a>
              <form class="d-inline" action="/superheroes/<%= superhero._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
    </div>
   
    
