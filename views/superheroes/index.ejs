<% layout("layouts/boilerplate") %>
<h1 class="text-center mb-3" >Superheroes</h1>
<% superheroes.forEach((superhero,i)=> {%>
<div class="card">
  <div class="row">
    <div class="col-md-4 ">
      <img class="img-fluid height" src="<%= superhero.images[0].url %> " alt="" /> 
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= i+1 %>.<%= superhero.nickname %></h5>
        <a class="btn btn-primary mt-3" href="/superheroes/<%= superhero._id %>">View Superhero</a>
      </div>
    </div>
  </div>
</div>
<% }) %>
